{
  "manifest_version": 3,
  "name": "Example Chrome Extension",
  "version": "1.0",
  "description": "An example Chrome extension to demonstrate the development cycle.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
