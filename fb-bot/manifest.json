{
  "manifest_version": 3,
  "name": "Example Chrome Extension",
  "version": "1.0",
  "description": "An example Chrome extension to demonstrate the development cycle.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "extension-icon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "https://www.facebook.com/*"
  ],
  "content_scripts": [ 
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["page_script.js"],
      "run_at": "document_end"
    }
  ]
}
